package reviewClass;

import java.lang.reflect.Array;

public class BeraberForLoop {

	public static void main(String[] args) {
		
		
		int [][] array= { {3,6,8,9},
				         {7,8,8,6}, 
				         {4,6,5,4},
				         {4,6,2,2},
				         };
		
		
		int max=array[0][0];
		
		for (int i=0; i<array.length; i++) { //row
			for (int k=0; k<array[i].length; k++) {
				if (max<array[i][k]) {
					max=array[i][k];
					
				}
				
				
			}
		}
		System.out.println(max);
		
		
		

	}

}
